<theme>
	
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>
	
	<view name="system">
	
	<image name="logo">
    <path>./logo.png</path>
	</image>
	
	<image name="console" extra="true">
	<path>./console.png</path>
	<origin>0 0</origin>
	<color>FFFFFF</color>
	<pos>0 0</pos>
	<size>1 1</size>
	<zIndex>70</zIndex>
	</image>
	
	</view>
	
	<view name="basic, detailed, video, grid">
	
	<image name="logo">
    <path>./logo.png</path>
	<color>FFFFFF</color>
	<origin>0 0</origin>
	<pos>0.01 0.01</pos>
	<maxSize>.34 .18</maxSize>
	<zIndex>90</zIndex>
	</image>
	
		<rating name="md_rating">
		<color>FFFFFF</color>
		<pos>0.74 0.77</pos>
		<size>0.255 0.068</size>
		<filledPath>./../_art/full_b.png</filledPath>
		<unfilledPath>./../_art/empty.png</unfilledPath>
		<zIndex>90</zIndex>
		</rating>
	
	</view>
	
			<feature supported="video">
	
		<view name="video">
		
			<!-- Posicion y tamaÃ±o del video juego -->

			<video name="md_video">
				<maxSize>0.58 0.82</maxSize>
				<origin>0 0</origin>
				<pos>0.135 0.120</pos>
				<delay>0.0</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
				<zIndex>80</zIndex>
				
			</video>
			
		</view>
		
	</feature>
	
</theme>
