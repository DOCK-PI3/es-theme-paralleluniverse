<theme>

	<formatVersion>4</formatVersion>
	
<feature supported="carousel">

		<view name="system">

			<!-- Custom Vertical System View -->
			<image name="console" extra="true">
				<maxSize>0.500 0.700</maxSize>
				<pos>0.655 0.465</pos>
			</image>

			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>0 0</pos>
				<size>1 1</size>
				<origin>0 0</origin>
				<color>FFFFFF00</color>
				<logoScale>1.5</logoScale>
				<logoSize>0.2 0.2</logoSize>
				<logoRotation>-6.5</logoRotation>
				<logoRotationOrigin>3.5 .5</logoRotationOrigin>
				<logoAlignment>right</logoAlignment>
				<maxLogoCount>7</maxLogoCount>
				<zIndex>75</zIndex>
			</carousel>
			
			<text name="systemInfo">
				<pos>0 0.9</pos>
				<size>0.980 0.050</size>
				<backgroundColor>FFFFFF00</backgroundColor>
				<color>8d6cab</color>
				<fontPath>./_art/menu.ttf</fontPath>
				<fontSize>0.05</fontSize>
				<alignment>right</alignment>
				<zIndex>71</zIndex>
			</text>

   </view>
</feature>


<view name="system">

<image name="sysbg0" extra="true">
	<color>ffffff</color>
	<path>./_art/white.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<color>000000</color>
	<zIndex>65</zIndex>
</image>

<image name="sysbg1" extra="true">
	<color>ffffff</color>
	<path>./_art/bg.jpg</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>70</zIndex>
</image>

<helpsystem name="help">
	<pos>0.02 0.94</pos>
    <textColor>8d6cab</textColor>
    <iconColor>8d6cab</iconColor>
    <fontPath>./_art/SF_Hollywood_Hills.ttf</fontPath>
    <fontSize>0.026</fontSize>
</helpsystem>

</view>

<view name="basic, detailed, video, grid">

<image name="frame" extra="true">
	<color>FFFFFFFF</color>
	<path>./_art/frame.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>63</zIndex>
</image>

<textlist name="gamelist">
	<selectorImagePath>./_art/selector.png</selectorImagePath>
	<selectorColor>FFFFFF</selectorColor>
	<selectedColor>8d6cab</selectedColor>
	<selectorHeight>0.037</selectorHeight>
	<primaryColor>F0F0F0</primaryColor>
	<secondaryColor>f4ee21</secondaryColor>
    <fontPath>./_art/menu.ttf</fontPath>	
	<alignment>left</alignment>
	<horizontalMargin>0.02</horizontalMargin>
	<pos>0.732 0.15</pos>
	<size>0.245 0.51</size>
	<fontSize>0.024</fontSize>
	<lineSpacing>1.2</lineSpacing>
	<zIndex>90</zIndex>
</textlist>

<helpsystem name="help">
	<pos>0.02 0.94</pos>
    <textColor>8d6cab</textColor>
    <iconColor>8d6cab</iconColor>
    <fontPath>./_art/menu.ttf</fontPath>
    <fontSize>0.026</fontSize>
</helpsystem>

<!-- metadata -->

		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate">
			<color>8d6cab</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_art/menu.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<zIndex>90</zIndex>
		</text>

		<text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer">
			<pos>1 1</pos>
			<zIndex>90</zIndex>
		</text>

		<datetime name="md_lastplayed, md_releasedate">
			<color>8d6cab</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./_art/menu.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<zIndex>90</zIndex>
		</datetime>

		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>

		<datetime name="md_releasedate">
			<pos>0.74 0.68</pos>
			<size>0 0.033</size>
		</datetime>

		<text name="md_genre">
			<pos>0.74 0.72</pos>
			<size>0 0.033</size>
		</text>

		<text name="md_developer">
			<pos>0.74 0.74</pos>
			<size>0 0.033</size>
		</text>

		<text name="md_lbl_players, md_players">
			<pos>0.74 0.7</pos>
			<size>0.09 0</size>
		</text>

		<text name="md_players">
			<pos>0.84 0.7</pos>
			<size>0.02 0</size>
		</text>
		
		<rating name="md_rating">
		<color>FFFFFF</color>
		<pos>0.74 0.77</pos>
		<size>0.255 0.068</size>
		<filledPath>./_art/full.png</filledPath>
		<unfilledPath>./_art/empty.png</unfilledPath>
		<zIndex>90</zIndex>
		</rating>

<!-- metadata end -->

		<text name="md_description">
			<color>F0F0F0</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./_art/menu.ttf</fontPath>
			<fontSize>0.023</fontSize>
			<lineSpacing>1</lineSpacing>
			<size>0.255 0.15</size>
			<pos>0.74 0.84</pos>
			<zIndex>90</zIndex>
		</text>
		
</view>


<view name="detailed">

<image name="md_image">
	<origin>0 0</origin>
		<pos>0.05 0.09</pos>
	<maxSize>1 1</maxSize>
	<zIndex>64</zIndex>
</image>

</view>

<view name="video">

<video name="md_video">
	<origin>0 0</origin>
	<pos>0 0.17</pos>
	<maxSize>0.8 0.68</maxSize>
	<delay>0.0</delay>
	<showSnapshotNoVideo>true</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<zIndex>65</zIndex>
</video>

<image name="md_marquee">
	<origin>0.5 0.5</origin>
	<pos>0.845 0.083</pos>
	<maxSize>0.48 0.15</maxSize>
	<zIndex>90</zIndex>
</image>

</view>
</theme>